<div class="pt-10 bg-[#F2F0F1]">
  <div class="container">
    <div class="flex items-center">
      <div class="w-1/2">
        <h2 class="text-[64px] leading-[64px] mb-8 pr-20">FIND CLOTHES THAT MATCHES YOUR STYLE</h2>
        <div class="max-w-xl">
          <p class="mb-6">
            Browse through our diverse range of meticulously crafted garments, designed to bring out your individuality
            and cater to your sense of style.
          </p>
          <a href="" class="bg-black rounded-full px-12 py-2 font-sm text-[16px] text-white">Shop Now</a>
        </div>

        <div class="flex mt-8">
          {% for item in (1..3) %}
            <div class="w-1/2">
              <p class="text-[40px] font-semibold">200+</p>
              International Brands
            </div>
          {% endfor %}
        </div>
      </div>
      <div class="w-1/2 flex justify-end">
        <div class="relative -right-22"><img height="" width="" src="{{'hero.jpg'|  asset_url}}" alt=""></div>
      </div>
    </div>
  </div>
</div>

<div class="bg-black  py-6">
  <div class="container">
    <div class="flex">
      {% for item in (1..7) %}
        <div class="flex-1">
          <img src="{{'vector.png'| asset_url}}" height="" width="" alt="">
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<div class="py-20">
  <div class="container">
    <h2 class="text-center text-[48px] mb-8">NEW ARRIVALS</h2>

    <div class="flex flex-wrap -mx-4">
      {% for item in (1..4) %}
        <div class="w-1/4 px-4 product_card">
          <div class="bg-gray-100 rounded-lg mb-6">
            <img class="w-full rounded-lg" src="{{'product.png'| asset_url}}" height="" width="" alt="">
          </div>
          <h3 class="capitalize text-xl mb-2">T-Shirt with TAPE DETAILS</h3>
          <div class="flex items-center text-gray-500 mb-4 text-sm">
            <div class="flex mr-4">
              {% for item in (1..5) %}
                <svg width="19" height="17" viewBox="0 0 19 17" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M9.24494 0.255005L11.8641 5.89491L18.0374 6.6431L13.4829 10.8769L14.679 16.9793L9.24494 13.956L3.8109 16.9793L5.00697 10.8769L0.452479 6.6431L6.62573 5.89491L9.24494 0.255005Z" fill="#FFC633"/>
                </svg>
              {% endfor %}
            </div>
            4.5/5
          </div>
          <p class="text-2xl font-bold">$120</p>
        </div>
      {% endfor %}
    </div>
    <div class="mt-10 text-center">
      <a href="" class="rounded-full px-14 py-2 font-sm text-[16px] border border-gray-200">View All</a>
    </div>
  </div>
</div>

